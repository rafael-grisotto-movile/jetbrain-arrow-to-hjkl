<idea-plugin>
    <id>hjkl-shortcuts</id>
    <name>HJKL Shortctus</name>
    <version>1.18</version>
    <vendor email="rafaelgrisotto@gmail.com" url="https://github.com/grisotto/jetbrain-arrow-to-hjkl">Rafael Grisotto</vendor>

    <description><![CDATA[
        Plugin which imposes alt-ijkl navigation shortcuts on currently open keymap.
        The idea is that these shortcuts are more ergonomic for navigation and editing than using keyboard arrows.
        Some of the shortcuts:
        <ul>
            <li>alt-k - line up</li>
            <li>alt-h - move to previous word</li>
            <li>alt-j - line down</li>
            <li>alt-l - move to next word</li>
        </ul>
        <br/><br/>
    ]]></description>

    <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
    <!-- Since IJ 2016.1 because it has Kotlin support. -->
    <idea-version since-build="145"/>

    <!-- See http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>ijkl.AppComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>
